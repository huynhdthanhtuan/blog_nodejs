<div class='container mt-4'>
    <h2 class='mt-4'>Khóa học của tôi</h2>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Name</th>
                <th scope='col'>Description</th>
                <th scope='col'>Slug</th>
                <th scope='col'></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.slug}}</td>
                    <td>
                        <a
                            href='/me/stored/courses/{{this._id}}/edit'
                            class='btn btn-primary'
                        >Sửa</a>
                        <a
                            href='#'
                            class='btn btn-primary'
                            data-toggle='modal'
                            data-target='#modal-delete-course'
                            id='delete-course-btn'
                            data-id='{{this._id}}'
                        >Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal -->
<div
    class='modal fade'
    id='modal-delete-course'
    tabindex='-1'
    role='dialog'
    aria-labelledby='exampleModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title' id='exampleModalLabel'>Xóa khóa học</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                Bạn có chắc chắn muốn xóa khóa học này?
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-danger'
                    id='destroy-course-btn'
                >Xóa bỏ</button>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Hủy</button>
            </div>
        </div>
    </div>
</div>

<script type='text/javascript'>

    // Dùng sự kiện này để sau khi tải xong DOM, sẽ dùng được JQuery
    document.addEventListener("DOMContentLoaded", function() {
        $('#modal-delete-course').on('shown.bs.modal', function() {
            $('#destroy-course-btn').click(function() { 
                const id = $('#delete-course-btn').data('id'); 
                alert(id);
            }) 
        }); 
    }); 
    
    
    document.title = "F8 Education | Khóa học của tôi";
</script>